{
    "definition": {
        "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
        "contentVersion": "1.0.0.0",
        "triggers": {
            "Recurrence": {
                "recurrence": {
                    "interval": 20,
                    "frequency": "Minute",
                    "timeZone": "India Standard Time"
                },
                "evaluatedRecurrence": {
                    "interval": 20,
                    "frequency": "Minute",
                    "timeZone": "India Standard Time"
                },
                "type": "Recurrence"
            }
        },
        "actions": {
            "HTTP-_MDE_API": {
                "runAfter": {
                    "Initialize_Compose_Tag": [
                        "Succeeded"
                    ]
                },
                "type": "Http",
                "inputs": {
                    "uri": "https://api.security.microsoft.com/api/machines",
                    "method": "GET",
                    "authentication": {
                        "type": "ManagedServiceIdentity",
                        "audience": "https://api.securitycenter.microsoft.com"
                    }
                },
                "runtimeConfiguration": {
                    "contentTransfer": {
                        "transferMode": "Chunked"
                    }
                }
            },
            "Parse_JSON": {
                "runAfter": {
                    "HTTP-_MDE_API": [
                        "Succeeded"
                    ]
                },
                "type": "ParseJson",
                "inputs": {
                    "content": "@body('HTTP-_MDE_API')",
                    "schema": {
                        "type": "object",
                        "properties": {
                            "type": {
                                "type": "string"
                            },
                            "required": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "properties": {
                                "type": "object",
                                "properties": {
                                    "@@odata.context": {
                                        "type": "object",
                                        "properties": {
                                            "type": {
                                                "type": "string"
                                            }
                                        }
                                    },
                                    "value": {
                                        "type": "object",
                                        "properties": {
                                            "type": {
                                                "type": "string"
                                            },
                                            "items": {
                                                "type": "object",
                                                "properties": {
                                                    "type": {
                                                        "type": "string"
                                                    },
                                                    "required": {
                                                        "type": "array",
                                                        "items": {
                                                            "type": "string"
                                                        }
                                                    },
                                                    "additionalProperties": {
                                                        "type": "boolean"
                                                    },
                                                    "properties": {
                                                        "type": "object",
                                                        "properties": {
                                                            "id": {
                                                                "type": "object",
                                                                "properties": {
                                                                    "type": {
                                                                        "type": "string"
                                                                    }
                                                                }
                                                            },
                                                            "computerDnsName": {
                                                                "type": "object",
                                                                "properties": {
                                                                    "type": {
                                                                        "type": "array",
                                                                        "items": {
                                                                            "type": "string"
                                                                        }
                                                                    }
                                                                }
                                                            },
                                                            "firstSeen": {
                                                                "type": "object",
                                                                "properties": {
                                                                    "type": {
                                                                        "type": "string"
                                                                    },
                                                                    "format": {
                                                                        "type": "string"
                                                                    }
                                                                }
                                                            },
                                                            "lastSeen": {
                                                                "type": "object",
                                                                "properties": {
                                                                    "type": {
                                                                        "type": "string"
                                                                    },
                                                                    "format": {
                                                                        "type": "string"
                                                                    }
                                                                }
                                                            },
                                                            "osPlatform": {
                                                                "type": "object",
                                                                "properties": {
                                                                    "type": {
                                                                        "type": "array",
                                                                        "items": {
                                                                            "type": "string"
                                                                        }
                                                                    }
                                                                }
                                                            },
                                                            "machineTags": {
                                                                "type": "object",
                                                                "properties": {
                                                                    "type": {
                                                                        "type": "string"
                                                                    },
                                                                    "items": {
                                                                        "type": "object",
                                                                        "properties": {
                                                                            "type": {
                                                                                "type": "string"
                                                                            }
                                                                        }
                                                                    }
                                                                }
                                                            },
                                                            "vmMetadata": {
                                                                "type": "object",
                                                                "properties": {
                                                                    "type": {
                                                                        "type": "string"
                                                                    },
                                                                    "additionalProperties": {
                                                                        "type": "boolean"
                                                                    },
                                                                    "properties": {
                                                                        "type": "object",
                                                                        "properties": {
                                                                            "vmId": {
                                                                                "type": "object",
                                                                                "properties": {
                                                                                    "type": {
                                                                                        "type": "array",
                                                                                        "items": {
                                                                                            "type": "string"
                                                                                        }
                                                                                    }
                                                                                }
                                                                            },
                                                                            "cloudProvider": {
                                                                                "type": "object",
                                                                                "properties": {
                                                                                    "type": {
                                                                                        "type": "array",
                                                                                        "items": {
                                                                                            "type": "string"
                                                                                        }
                                                                                    }
                                                                                }
                                                                            },
                                                                            "resourceId": {
                                                                                "type": "object",
                                                                                "properties": {
                                                                                    "type": {
                                                                                        "type": "array",
                                                                                        "items": {
                                                                                            "type": "string"
                                                                                        }
                                                                                    }
                                                                                }
                                                                            },
                                                                            "subscriptionId": {
                                                                                "type": "object",
                                                                                "properties": {
                                                                                    "type": {
                                                                                        "type": "array",
                                                                                        "items": {
                                                                                            "type": "string"
                                                                                        }
                                                                                    }
                                                                                }
                                                                            }
                                                                        }
                                                                    }
                                                                }
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "Filter-Time": {
                "runAfter": {
                    "Parse_JSON": [
                        "Succeeded"
                    ]
                },
                "type": "Query",
                "inputs": {
                    "from": "@body('Parse_JSON')?['value']",
                    "where": "@greaterOrEquals(ticks(item()?['firstSeen']), ticks(variables('lastWindowStart')))\n"
                }
            },
            "For_each_1": {
                "foreach": "@outputs('Filter-Time')['body']",
                "actions": {
                    "HTTP-Add_Tag": {
                        "type": "Http",
                        "inputs": {
                            "uri": "@{concat('https://api.securitycenter.microsoft.com/api/machines/',first(body('Filter_OS'))?['id'], '/tags')}\n",
                            "method": "POST",
                            "headers": {
                                "Content-Type": "application/json"
                            },
                            "body": {
                                "Value": "@{variables('Compose_Tag')}",
                                "Action": "Add"
                            },
                            "authentication": {
                                "type": "ManagedServiceIdentity",
                                "audience": "https://api.securitycenter.microsoft.com"
                            }
                        },
                        "runtimeConfiguration": {
                            "contentTransfer": {
                                "transferMode": "Chunked"
                            }
                        }
                    }
                },
                "runAfter": {
                    "Filter-SensorHealthState": [
                        "Succeeded"
                    ]
                },
                "type": "Foreach"
            },
            "Initialize_Compose_Tag": {
                "runAfter": {},
                "type": "InitializeVariable",
                "inputs": {
                    "variables": [
                        {
                            "name": "lastWindowStart",
                            "type": "string",
                            "value": "@{addMinutes(utcNow(), -4500)}"
                        },
                        {
                            "name": "Compose_Tag",
                            "type": "string",
                            "value": "Shell-nitin-test"
                        }
                    ]
                }
            },
            "Filter_OS": {
                "runAfter": {
                    "Filter_Azure_VM": [
                        "Succeeded"
                    ]
                },
                "type": "Query",
                "inputs": {
                    "from": "@body('Filter-Time')",
                    "where": "@equals(item()?['osPlatform'], 'Windows11')"
                }
            },
            "Filter_Azure_VM": {
                "runAfter": {
                    "Filter-MachineTags": [
                        "Succeeded"
                    ]
                },
                "type": "Query",
                "inputs": {
                    "from": "@body('Filter-Time')",
                    "where": "@contains(toLower(coalesce(item()?['vmMetadata']?['resourceId'], '')), 'microsoft.compute')"
                }
            },
            "Filter-OnBoardingStatus": {
                "runAfter": {
                    "Filter_OS": [
                        "Succeeded"
                    ]
                },
                "type": "Query",
                "inputs": {
                    "from": "@body('Filter_OS')",
                    "where": "@equals(toLower(coalesce(item()?['onboardingStatus'], '')), 'Onboarded')"
                }
            },
            "Filter-SensorHealthState": {
                "runAfter": {
                    "Filter-OnBoardingStatus": [
                        "Succeeded"
                    ]
                },
                "type": "Query",
                "inputs": {
                    "from": "@body('Filter_OS')",
                    "where": "@equals(toLower(coalesce(item()?['healthStatus'], '')), 'Active')"
                }
            },
            "Filter-MachineTags": {
                "runAfter": {
                    "Filter-Time": [
                        "Succeeded"
                    ]
                },
                "type": "Query",
                "inputs": {
                    "from": "@body('Parse_JSON')?['value']",
                    "where": "@or(empty(item()?['machineTags']), equals(length(item()?['machineTags']), 0))"
                }
            }
        },
        "outputs": {},
        "parameters": {
            "$connections": {
                "type": "Object",
                "defaultValue": {}
            }
        }
    },
    "parameters": {
        "$connections": {
            "type": "Object",
            "value": {}
        }
    }
}
